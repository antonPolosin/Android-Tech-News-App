<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_margin="3dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp">

        <RelativeLayout
            android:id="@+id/relative_layout_no_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"/>

            <RelativeLayout
                android:id="@+id/relLayoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/cardTitleNoImage"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/headlineColor"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Card Title" />

            <ImageView
                android:id="@+id/cardAuthorNoImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:fontFamily="sans-serif"
                android:layout_below="@+id/cardTitleNoImage"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardUpdatedNoImage"
                android:paddingBottom="5dp"
                android:layout_alignRight="@id/relLayoutText"
                android:layout_alignBottom="@id/cardImage"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:text="updated"
                android:textSize="10sp" /> />

            <ProgressBar
                android:id="@+id/cardProgressDialogNoImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>